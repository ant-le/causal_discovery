{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "tavily_*": "deny"
    },
    "mcp": {
        "docling": {
            "type": "local",
            "command": [
                "/bin/sh",
                "-lc",
                "cd /tmp && exec /opt/homebrew/bin/uvx --from=docling-mcp docling-mcp-server"
            ],
            "timeout": 3000000
        }
    }
}
