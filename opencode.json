{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "tavily_*": "deny"
  },
  "mcp": {
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:TAVILY_API_KEY}"
      },
      "enabled": true
    }
  }
}
